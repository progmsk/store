@model IReadOnlyDictionary<string, string>
@{
    ViewData["Title"] = "Способ доставки";
}

<h1>Способ доставки</h1>

<form action="@Url.Action(nameof(OrderController.StartDelivery))" method="post">
    <div class="form-group">
        <label for="code">Способ доставки:</label>
        <select class="form-control" name="serviceName">
            @foreach (var method in Model)
            {
                <option value="@method.Key">@method.Value</option>
            }
        </select>
    </div>
    <button type="submit" class="btn btn-success">Далее</button>
</form>

